# Exemple de fichier .env pour la production (à configurer sur Render)
NODE_ENV=production
PORT=3000
LOG_LEVEL=error

# Configuration de la base de données
DB_HOST=votre-serveur-mysql.render.com
DB_USER=votre_utilisateur
DB_PASSWORD=votre_mot_de_passe
DB_NAME=audacieuses_db

# Configuration JWT
JWT_SECRET=votre_secret_jwt_tres_securise
JWT_EXPIRATION=7d

# Configuration des uploads
UPLOAD_PATH=uploads/

# Configuration du serveur
API_BASE_URL=https://audacieuses-api.onrender.com
CLIENT_BASE_URL=https://audacieuses-web.onrender.com
